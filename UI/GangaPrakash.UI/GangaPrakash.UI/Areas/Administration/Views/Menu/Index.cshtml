@using GangaPrakashAPI.Model
@model IEnumerable<Menu>
    @{ 
        TempData["MessageClass"] = "alert alert-success alert-dismissable";
    }
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Menus</h5>
                    <a class="btn btn-primary btn-rounded" href="@Url.Action("Create", "Menu",new { Area="Administration"})" style="float:right;">Add</a>
                </div>
                <div class="ibox-content">
                    @if (TempData["Message"] != null)
                    {
                        <div class="@TempData["MessageClass"]">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            A wonderful serenity has taken possession. <a class="alert-link" href="#">Alert Link</a>.
                        </div>
                    }
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th colspan="1">Sequence No.</th>
                                    <th colspan="1">Module</th>
                                    <th colspan="1">Parent Menu</th>
                                    <th colspan="1">Menu</th>
                                    <th colspan="1">Area</th>
                                    <th colspan="1">Controller</th>
                                    <th colspan="1">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td colspan="1">@item.SequenceNo</td>
                                    <td colspan="1">@item.Module</td>
                                    <td colspan="1">@item.ParentMenu</td>
                                    <td colspan="1"><a href="/Administration/Menu/Edit?Id=@item.Id">@item.Name</a></td>
                                    <td colspan="1">@item.Area</td>
                                    <td colspan="1">@item.Controller</td>
                                    <td colspan="1">@item.Action</td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{

    <script>
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Menus' },
                    { extend: 'pdf', title: 'Menus' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });

        });

    </script>
}





